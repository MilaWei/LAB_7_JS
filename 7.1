<!DOCTYPE html>
<html>
<head>
  <title>Моя сторінка</title>
  <meta charset="UTF-8">
</head>
<body>
  <h1>Моя сторінка</h1>
  <div id="result1"></div>
  <div id="result2"></div>
  <script>
    function largestOfFour(arr) {
      const results = [];
      for (let i = 0; i < arr.length; i++) {
        let largestNumber = arr[i][0];
        for (let j = 1; j < arr[i].length; j++) {
          if (arr[i][j] > largestNumber) {
            largestNumber = arr[i][j];
          }
        }
        results.push(largestNumber);
      }
      return results;
    }

    const result1 = largestOfFour([[4, 9, 1, 3], [13, 35, 18, 26], [32, 35, 97, 39], [1000000, 1001, 857, 1]])
    const result2 = largestOfFour([[17, 23, 25, 12], [25, 7, 34, 48], [4, -10, 18, 21], [-72, -3, -17, -10]]);

    document.getElementById('result1').textContent = 'Результат 1: ' + result1;
    document.getElementById('result2').textContent = 'Результат 2: ' + result2;
  </script>
</body>
</html>
